<xs:schema attributeFormDefault="unqualified" elementFormDefault="qualified" xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <xs:element name="offerreport">
    <xs:complexType>
      <xs:sequence>
        <xs:element maxOccurs="unbounded" name="reportrecord">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="programcode" type="programCodeString" />
              <xs:element name="offercode" type="xs:positiveInteger" />
              <xs:element name="offerdescription" type="offerNameString" />
              <xs:element name="startdate" type="xs:date" />
              <xs:element name="enddate" type="xs:date" />
              <xs:element name="productgroups" maxOccurs="1">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element maxOccurs="unbounded" name="productgroup">
                      <xs:complexType>
                        <xs:attribute name="id" type="xs:positiveInteger" use="required" />
                        <xs:attribute name="name" type="pgNameString" use="required" />
