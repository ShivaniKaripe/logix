                    </xs:element>
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
      </xs:sequence>
      <xs:attribute name="reportdate" type="xs:dateTime" />
    </xs:complexType>
  </xs:element>
  <xs:simpleType name="programCodeString">
    <xs:restriction base="xs:string">
      <xs:maxLength value="13" />
    </xs:restriction>
  </xs:simpleType>
  <xs:simpleType name="offerNameString">
    <xs:restriction base="xs:string">
      <xs:maxLength value="200" />
    </xs:restriction>
  </xs:simpleType>
  <xs:simpleType name="pgNameString">
    <xs:restriction base="xs:string">
      <xs:maxLength value="400" />
    </xs:restriction>
  </xs:simpleType>
